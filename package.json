    "source": "dist",
    "inlineCss": false,
    "skipThirdPartyRequests": false,
    "minifyHtml": {
      "sortClassName": false
    },
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
