    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss,sass,less,json,yaml,yml,md,mdown,mdx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "post-checkout": "yarn install",
      "post-merge": "yarn install"
    }
  }
